<!DOCTYPE html>
<html>
<head>
  <title>Hotel Bill - Shree Nekunj Palace</title>
  <style>
    body {
      font-family: Arial;
      background: #f3f3f3;
      padding: 20px;
      max-width: 650px;
      margin: auto;
      border-radius: 10px;
    }
    input {
      width: 100%;
      padding: 10px;
      margin-top: 10px;
    }
    button {
      width: 100%;
      padding: 12px;
      margin-top: 15px;
      background-color: #4CAF50;
      color: white;
      font-size: 16px;
      border: none;
      cursor: pointer;
    }
    .bill {
      background: white;
      padding: 15px;
      margin-top: 20px;
      border-radius: 10px;
    }
  </style>
</head>
<body>

  <h2>ğŸ§¾ Shree Nekunj Palace - Bill Calculator</h2>

  <label>Yatri ka Naam:</label>
  <input type="text" id="name">

  <label>Address:</label>
  <input type="text" id="address">

  <label>Email:</label>
  <input type="email" id="email">

  <label>Mobile Number:</label>
  <input type="text" id="mobile">

  <label>Small Room Book Kitne:</label>
  <input type="number" id="smallRoom" value="0">

  <label>Big Room Book Kitne:</label>
  <input type="number" id="bigRoom" value="0">

  <label>Kitne Din ke liye:</label>
  <input type="number" id="days" value="1">

  <button onclick="generateBill()">Bill Banaye</button>

  <div class="bill" id="billOutput" style="display:none;"></div>

  <script>
    function generateBill() {
      const name = document.getElementById('name').value;
      const address = document.getElementById('address').value;
      const email = document.getElementById('email').value;
      const mobile = document.getElementById('mobile').value;
      const smallRoom = parseInt(document.getElementById('smallRoom').value);
      const bigRoom = parseInt(document.getElementById('bigRoom').value);
      const days = parseInt(document.getElementById('days').value);

      const priceSmall = 3000;
      const priceBig = 4500;
      const gstRate = 0.18;

      // ğŸ” Set discount based on days
      let discountRate = 0;
      if (days >= 1 && days <= 4) {
        discountRate = 0.06;
      } else if (days >= 5 && days <= 500) {
        discountRate = 0.10;
      } else {
        discountRate = 0; // No discount if more than 7 or invalid
      }

      const totalSmall = smallRoom * priceSmall * days;
      const totalBig = bigRoom * priceBig * days;
      const totalBeforeTax = totalSmall + totalBig;
      const gst = totalBeforeTax * gstRate;
      const discount = totalBeforeTax * discountRate;
      const finalAmount = totalBeforeTax + gst - discount;

      document.getElementById('billOutput').style.display = 'block';
      document.getElementById('billOutput').innerHTML = `
        <h3>ğŸ§¾ Final Bill</h3>
        <p><strong>Naam:</strong> ${name}</p>
        <p><strong>Address:</strong> ${address}</p>
        <p><strong>Email:</strong> ${email}</p>
        <p><strong>Mobile:</strong> ${mobile}</p>
        <hr>
        <p><strong>Small Rooms:</strong> ${smallRoom} x â‚¹3000 x ${days} Day(s) = â‚¹${totalSmall}</p>
        <p><strong>Big Rooms:</strong> ${bigRoom} x â‚¹4500 x ${days} Day(s) = â‚¹${totalBig}</p>
        <p><strong>Total Before GST & Discount:</strong> â‚¹${totalBeforeTax}</p>
        <p><strong>GST (18%):</strong> â‚¹${gst.toFixed(2)}</p>
        <p><strong>Discount (${(discountRate * 100)}%):</strong> -â‚¹${discount.toFixed(2)}</p>
        <hr>
        <h3>Total Amount Payable: â‚¹${finalAmount.toFixed(2)}</h3>
      `;
    }
  </script>

</body>
</html>